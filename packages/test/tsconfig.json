{
  "compilerOptions": {
    "outDir": "./lib",
    "rootDirs": ["src", "config"],
    "target": "ES6",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "declaration": false,
    "esModuleInterop": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "baseUrl": "./",
    "lib": ["ES2016", "DOM"],
    "paths": {
      "antd-mobile": ["src/index.ts"],
      "antd-mobile/src/*": ["src/*"],
      "antd-mobile/es/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true
  },
  "include": ["src", "rollup-build-components"],
  "exclude": ["node_modules", "lib", "es", "dist", ".dumi"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "resolveJsonModule": true,
      "noImplicitAny": false
    }
  }
}
