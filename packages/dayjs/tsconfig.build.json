{
    "compilerOptions": {
      "baseUrl": "./",
      "strictNullChecks": true,
      "module": "es6",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "jsx": "react",
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "noImplicitAny": true,
      "target": "es6",
      "declaration": true,
      "lib": ["dom", "esnext"],
      "skipLibCheck": true,
      "stripInternal": true
    },
    "include": [
      "src/**/*.tsx",
      "src/**/*.ts"
    ],
    "exclude": ["node_modules", "lib", "es", "dist"]
  }
  